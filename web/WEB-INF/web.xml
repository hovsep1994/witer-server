<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
           version="3.0">

    <servlet>
        <servlet-name>home</servlet-name>
        <jsp-file>/index.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>home</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>addVenue</servlet-name>
        <jsp-file>/add_venue.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>addVenue</servlet-name>
        <url-pattern>/venues/add</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>register</servlet-name>
        <servlet-class>com.waiter.server.servlets.RegisterCompanyServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>register</servlet-name>
        <url-pattern>/api/companies/register</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>apiAddVeneu</servlet-name>
        <servlet-class>com.waiter.server.servlets.AddVenueServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>apiAddVeneu</servlet-name>
        <url-pattern>/api/venues/add</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>cities</servlet-name>
        <servlet-class>com.waiter.server.servlets.SearchCitiesServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>cities</servlet-name>
        <url-pattern>/api/cities</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>getMenu</servlet-name>
        <servlet-class>com.waiter.server.servlets.GetMenuServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>getMenu</servlet-name>
        <url-pattern>/getMenu</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>createGroup</servlet-name>
        <servlet-class>com.waiter.server.servlets.CreateGroupServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>createGroup</servlet-name>
        <url-pattern>/createGroup</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>getProductsByGroup</servlet-name>
        <servlet-class>com.waiter.server.servlets.GetProductsByGroupServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>getProductsByGroup</servlet-name>
        <url-pattern>/getProductsByGroup</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>getGroup</servlet-name>
        <servlet-class>com.waiter.server.servlets.GetGroupServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>getGroup</servlet-name>
        <url-pattern>/getGroup</url-pattern>
    </servlet-mapping>

</web-app>
