<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">

    <servlet>
        <servlet-name>home</servlet-name>
        <jsp-file>/index.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>home</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>login</servlet-name>
        <jsp-file>/login.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>addVenue</servlet-name>
        <jsp-file>/add_venue.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>addVenue</servlet-name>
        <url-pattern>/venues/add</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>email_validation</servlet-name>
        <jsp-file>/validate_email.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>email_validation</servlet-name>
        <url-pattern>/users/email/validation</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>add_menu</servlet-name>
        <jsp-file>/add_menu.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>add_menu</servlet-name>
        <url-pattern>/menus/add</url-pattern>
    </servlet-mapping>


</web-app>
